@model IEnumerable<AspNet_Core.Models.Department>
@{ 
    ViewBag.Title = "Department List";
}
<div class="card-deck">
    @foreach (var Department in Model)
    {
<div class="card m-3" style="min-width:18rem; max-width:30.5% ">
    <div class="card-header font-weight-bold">
        @Department.Name
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Department" asp-action="details" asp-route-id="@Department.ID"
           class="btn btn-primary m-1">View</a>
        <a asp-action="edit" asp-controller="Department" asp-route-id="@Department.ID"
           class="btn btn-primary m-1">Edite</a>
        <a href="#" class="btn btn-danger m-1">Delete</a>
    </div>
</div>
    }

</div>
