@model AspNet_Core.Models.Department
@{ 
    ViewBag.Title = "Edit Department";
}
    <form enctype="multipart/form-data" asp-controller="Department" asp-action="edit" method="post" class="mt-3">
        <input hidden asp-for="@Model.ID" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
      
        <div class="form-group row">
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">Update</button>
                <a class="btn btn-primary" asp-controller="Department" asp-action="index">Cancel</a>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
