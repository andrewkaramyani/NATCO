@model AspNet_Core.Models.Employee
@{ 
    ViewBag.Title = "Edit Employee";
}
    <form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
        <input hidden asp-for="@Model.ID" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="HireDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="HireDate" class="form-control" placeholder="Hire Date" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Salary" class="form-control" placeholder="Salary" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>
        @*<div class="form-group row">
            <label class="col-sm-2 col-form-label">Job</label>
            <div class="col-sm-10">
                <select asp-for="subSectionId" class="custom-select mr-sm-2"
                        asp-items="@(new SelectList(Listjobs,"Job","JobName"))">
                    <option disabled selected> Please Select One </option>
                </select>
                <span asp-validation-for="subSectionId" class="text-danger"></span>
            </div>
        </div>*@
        <div class="form-group row">
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">Update</button>
                <a class="btn btn-primary" asp-controller="home" asp-action="index">Cancel</a>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        @section Script
    {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
