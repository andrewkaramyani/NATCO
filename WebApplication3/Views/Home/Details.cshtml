@model AspNet_Core.Models.Employee
@{
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center" m-3>
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>
            <div class="card-body text-center">
                <h4>Employee ID : @Model.ID</h4>
                <h4>Department : @Model.SubSection.Name</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@Model.ID"
                   class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-primary m-1">Delete</a>
            </div>
        </div>
    </div>
</div>


