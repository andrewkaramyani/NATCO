@model IEnumerable<AspNet_Core.Models.Employee>
@{ 
    ViewBag.Title = "Employee List";
}
<div class="card-deck">
    @foreach (var employee in Model)
    {
<div class="card m-3" style="min-width:18rem; max-width:30.5% ">
    <div class="card-header font-weight-bold">
        @employee.Name
        @employee.HireDate
        @employee.Salary
    </div>
    <div class="card-footer text-center">
        <a asp-controller="home" asp-action="details" asp-route-id="@employee.ID"
           class="btn btn-primary m-1">View</a>
        <a asp-action="edit" asp-controller="home" asp-route-id="@employee.ID"
           class="btn btn-primary m-1">Edite</a>
        <a href="#" class="btn btn-danger m-1">Delete</a>
    </div>
</div>
    }

</div>
